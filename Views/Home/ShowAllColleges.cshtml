@{
    ViewBag.Title = "ShowAllColleges";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<term_project_ead.Models.College>

 
<head><title></title>
       <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

    </head>

<h2 style="font-size:3em;font-family:Constantia;color:rgba(230, 13, 53, 0.86);margin-left:20px;text-align:center"> Colleges</h2>
<br />
<br />
  
<div class="container ">
   
      
       
      @for(int i = 0; i < Model.Count; i++) {
         <div class="col-md-1"></div>
            <div class="col-md-3">
                <form action="~/Home/details" method="post">
                    <div class="header">
                        <h3 style="font-family:Dotum;color:rgba(230, 13, 53, 0.86)"><label>@(Model.ElementAt(i).ClgName)</label></h3> </div>
                     <div class="thumbnews thumb-shadow post-thumbnail">
                       
                       <a href="/home/details?name=@(Model.ElementAt(i).ClgName)">
                           <img src="@(Model.ElementAt(i).picture)" style="height:150px;width :200px;" /></a>
                     </div>
                    
                    <div class="news thumbnews">
                    </div>
                    <input type="hidden" name="ClgName" value="@Model.ElementAt(i)" />
                    <button type="submit" class=" btn btn-info"> Read Details </button>
                    </form>
                </div>
           
    }
        
    </div>
      
   
